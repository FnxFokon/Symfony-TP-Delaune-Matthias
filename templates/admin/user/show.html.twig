{% extends 'base.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}
	<h1>{{ user.lastname }}
		{{ user.firstname }}</h1>

	<table class="table">
		<tbody>
			<tr>
				{% for role in user.roles %}
					{% if role == 'ROLE_ADMIN' %}
						<span class="badge rounded-pill bg-success m-2 fs-5">admin</span>
					{% elseif role == 'ROLE_OWNER' %}
						<span class="badge rounded-pill bg-primary m-2 fs-5">Propriétaire</span>
					{% elseif role == 'ROLE_USER' %}
						<span class="badge rounded-pill bg-primary m-2 fs-5">Client</span>
					{% else %}
						<span class="badge rounded-pill bg-grey m-2 fs-5">pas de role</span>
					{% endif %}
				{% endfor %}
			</tr>
			<tr>
				<th>Id</th>
				<td>{{ user.id }}</td>
			</tr>
			<tr>
				<th>Email</th>
				<td>{{ user.email }}</td>
			</tr>
			<tr>
				<th>Phone</th>
				<td>{{ user.phone }}</td>
			</tr>
			<tr>
				<th>Address</th>
				<td>{{ user.address }}</td>
			</tr>
			<tr>
				<th>ZipCode</th>
				<td>{{ user.zipCode }}</td>
			</tr>
			<tr>
				<th>City</th>
				<td>{{ user.city }}</td>
			</tr>
			<tr>
				<th>Country</th>
				<td>{{ user.country }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_user') }}" class="btn btn-primary m-3">Retour à la liste des utilisateurs</a>

	<a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning m-3">Modifier</a>

	{{ include('admin/user/_delete_form.html.twig') }}
{% endblock %}
