{% extends 'base.html.twig' %}

{% block title %}Vos propriétés sur notre camping
{% endblock %}

{% block body %}
	<h1>Vos propriétés sur notre camping</h1>

	<div class="d-flex flex-wrap col-sm-10 justify-content-center mt-5">
		{% for bien in biens %}
			<div class="card m-2 d-flex flex-column gap-3 mb-5 border-black border-2 border-opacity-75" style="width:25rem;">
				<img src="/images/bien/{{ bien.imagePath }}" class="card-img-top img-fluid " alt="{{ bien.label }} pour {{ bien.maxPeople}} personnes" style="height:12rem;width:100%;">
				<div class="card-body d-flex flex-column justify-content-center p-3">
					<h5 class="card-title">{{ bien.label }}
						pour
						{{ bien.maxPeople}}
						personnes</h5>
					<p class="card-text">
						{{ bien.price }}
						€</p>
				</div>
				<div class="d-flex flex-column">
					<div class="d-flex justify-content-center p-3">
						<a href="/detail/{{ bien.id }}" class="btn btn-primary" style="width:100%;">Voir détail</a>
					</div>
					<div class="d-flex justify-content-center p-3">
						<a href="{{ path('app__owner_reservation', {'id': bien.id}) }}" class="btn btn-secondary" style="width:100%;">Voir les réservations</a>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
